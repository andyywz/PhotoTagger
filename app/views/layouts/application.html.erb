<!DOCTYPE html>
<html>
<head>
  <title>Phototagger</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
Logged in as: <%= current_user.name %>
<% end %>

<% if flash[:notices] %>
<% flash[:notices].each do |notice| %>
<%= notice %>
<% end %>
<% end %>

<%= yield %>

</body>
</html>
